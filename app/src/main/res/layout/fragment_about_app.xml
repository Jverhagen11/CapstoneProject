<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutAppFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/capstone_project_application"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            android:text="@string/this_formula_1_application_is_made_by_jo_l_verhagen_a_third_year_student_of_hbo_ict_software_engineering"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textSize="14sp"
                android:text="@string/the_idea_of_this_application_is_a_simple_overview_application_to_see_when_a_formula_1_race_is_the_races_are_upcoming_or_past_in_addition_there_is_a_standings_overview_containing_all_the_current_drivers_of_the_formula_1"/>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="220dp"
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/joel" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>